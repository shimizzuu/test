<h2>トピック一覧</h2>
<ul>
  <% @topics.each do |topic| %>
    <li>
      <%= link_to topic.title, topic_path(topic.id) %>
      <%= link_to '[削除]', topic_path(topic.id), method: :delete, data: {confirm: "削除してよろしいですか？"} %>
    </li>
  <% end %>
</ul>

<h3>トピック新規登録</h3>
<%= form_for @new_topic, url: { action: 'create' } do |f| %>
  <%= f.text_field :title %>
  <%= f.submit %>
<% end %>
